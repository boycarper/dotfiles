[user]
	name = Boy Carper
	email = boy@toybot.nl
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = false
[alias]
	ci = commit
    b = branch
    s = status
	f = fetch
	co = checkout
	ci = commit
	cp = cherry-pick
	com = checkout master
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	lg2 = log --format='%Cgreen%h%Creset %C(cyan)%an%Creset - %s' --graph
	undo-commit = reset --soft HEAD^
	today = !git log --since=midnight --author=\"$(git config user.name)\" --oneline
[push]
	default = current
[rerere]
	enabled = true
[pull]
	rebase = true
[help]
	autocorrect = 15
[ghi]
	token = !security find-internet-password -a boycarper -s github.com -l 'ghi token' -w
